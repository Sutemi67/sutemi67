fun main() {
    /* Celsius to Fahrenheit: 째 F = 9/5 (째 C) + 32
Kelvin to Celsius: 째 C = K - 273.15
Fahrenheit to Kelvin: K = 5/9 (째 F - 32) + 273.15. */ 
    val Celsius: Double = 27.0
    val Fahrenheit: Double = 10.0
    val Kelvin: Double = 350.0
    val Unit1 = "Celsius"
    val Unit2 = "Fahrenheit"
    val Unit3 = "Kelvin"
    
    var CelsInFahr: (Double) -> Double = {
        Celsius*9/5 + 32
    }
     var KelvToCels: (Double) -> Double = {
        Kelvin - 273.15
    }
     var FahrToKelv: (Double) -> Double = {
        (Fahrenheit-32)*5/9+273.15
    }
     
    printFinalTemperature (Celsius, Unit1, Unit2, CelsInFahr)
    printFinalTemperature (Kelvin, Unit3, Unit1, KelvToCels)
    printFinalTemperature (Fahrenheit, Unit2, Unit3, FahrToKelv)
}


fun printFinalTemperature(
    initialMeasurement: Double, 
    initialUnit: String, 
    finalUnit: String, 
    conversionFormula: (Double) -> Double
) {
    val finalMeasurement = String.format("%.3f", conversionFormula(initialMeasurement)) // two decimal places
    println("$initialMeasurement degrees $initialUnit is $finalMeasurement degrees $finalUnit.")
}
